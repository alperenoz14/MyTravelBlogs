@model MyTravelBlogs.Models.Model
@{
    Layout = "~/Views/Shared/_myLayout.cshtml";
}


<div class="col-md-9 main">
    <!--banner-section-->
    <div class="banner-section">
        @foreach (var item in Model.Blogs)
        {
            <h3 class="tittle">@item.title</h3>
            <div class="single">
                <img src="@item.blogImage" class="img-responsive" alt="" />
                <div class="b-bottom">
                    <h5 class="top"><a href="#">@item.title</a></h5>
                    <p class="sub">@item.blogContent<br /><br />Seyahatlerle ilgili fotoğraflar için <a href="~/Homepage/Gallery">burayı</a> tıklayınız.</p>
                    <p>Yazılma Tarihi: @item.blogDate<a class="span_link" href="#"><span class="glyphicon glyphicon-comment"></span>@Model.Comments.Count</a></p>
                </div>
                <br />
            </div>
        }
        <div class="response">
            <h4>Yorumlar</h4>
            @if (Model.Comments.Count == 0)
            {
                <h5>Bu Blog için su ana kadar hiç yorum yapılmadı...</h5>
            }
            @foreach (var item in Model.Comments)
            {
                <div class="media response-info">
                    <div class="media-left response-text-left">
                        <a href="#">
                            <img class="media-object" src="https://i.hizliresim.com/bWMVQM.png" style="width:100px" height:"75px" alt="" />
                        </a>
                        <h5><a href="#">@item.userName</a></h5>
                    </div>
                    <div class="media-body response-text-right">
                        <p>
                            @item.commentContent
                        </p>
                        <ul>
                            <li>@item.date</li>
                        </ul>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            }
        </div>
        <div class="coment-form">
            <h4>Yorum Yap</h4>
            <form asp-controller="Blogdetail" asp-action="Blogdetail">
                <input asp-for="Comment.userName" type="text" placeholder="Kullanıcı adı...">
                <input asp-for="Comment.mail" type="email" placeholder="Email...">
                <textarea asp-for="Comment.commentContent" typeof="text" placeholder="Yorumunuz..."></textarea>
                <input type="submit" value="Yorumu Gönder">
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
    <!--//banner-->
    <!--//banner-section-->
    <div class="banner-right-text">
        <h3 class="tittle">Son 3 Blog</h3>
        <!--/general-news-->
        <div class="general-news">
            <div class="general-inner">
                <div class="edit-pics">
                    @foreach (var blog in Model.Blogs2)
                    {
                        <div class="editor-pics">
                            <div class="col-md-3 item-pic">
                                <img src="@blog.blogImage" class="img-responsive" alt="">

                            </div>
                            <div class="col-md-9 item-details">
                                <h5 class="inner two"><a href="~/Blogdetail/BlogDetail/@blog.blogId">@blog.title</a></h5>
                                <div class="td-post-date two">Eklenme tarihi:  <i class="glyphicon glyphicon-time"></i>@blog.blogDate</div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!--//general-news-->
        <!--/news-->
        <!--/news-->
    </div>
    <div class="clearfix"> </div>
    <!--/footer-->
    <div class="footer">
        <div class="footer-top">
            <div class="col-md-4 footer-grid">
                <h4>Alperen Öz</h4>
                <ul class="bottom">
                    <li>Seyahat Bloglarım</li>
                    <li>Geri bildirimler için teşekkürler</li>
                </ul>
            </div>
            <div class="col-md-4 footer-grid">
                <h4>Bildirim İçin</h4>
                <ul class="bottom">
                    <li><i class="glyphicon glyphicon-home"></i>24/7 Müsait</li>
                    <li><i class="glyphicon glyphicon-envelope"></i><a href="mailto:alperenoz1464@gmail.com">alperenoz1464@gmail.com</a></li>
                </ul>
            </div>
            <div class="col-md-4 footer-grid">
                <h4>Adres</h4>
                <ul class="bottom">
                    <li><i class="glyphicon glyphicon-map-marker"></i>Usak/TURKEY </li>
                    <li><i class="glyphicon glyphicon-earphone"></i>telefon: (507) 602-00-83 </li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="copy">
        <p>&copy; 2021 Ocak. Tüm Hakları Saklıdır. | Design by <a href="http://w3layouts.com/">W3layouts</a> </p>
    </div>
    <div class="clearfix"> </div>
</div>