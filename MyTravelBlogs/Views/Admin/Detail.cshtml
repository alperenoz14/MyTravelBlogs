@model MyTravelBlogs.Models.Blog
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<style>
    .border1{
        border-bottom: 3px solid red;
        background-color: darkseagreen;
    }
    .border2{
        border-bottom: 5px solid black;
        
    }
</style>
<div class="col-md-9">
    <br />
    <form>
        <div class="form-group">
            <label style="margin-top: 10px"><h3 class="border1">Başlık</h3></label><br />
            <h3>@Model.title</h3>
        </div>
        <div class="form-group">
            <label><h3 class="border1">Blog İçeriği</h3></label><br />
            @Model.blogContent
        </div>
        <div style="margin-top: 25px">
            <a style="width: 150px" href="~/Admin/Blogs" class="btn btn-success">Bloglara Dön</a>
        </div>
    </form>
</div>
